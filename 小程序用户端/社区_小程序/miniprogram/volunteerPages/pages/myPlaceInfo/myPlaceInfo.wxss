}
.flexBar
{
  display: flex;
  justify-content: center;
}
.barItem
{
  float: left;
  width: 175rpx;
  height: 50rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  background-color: cornflowerblue;
  text-align: center;
}
#totalBar
{
  clear: both;
  width: 350rpx;
  height: 10rpx;
  background-color: darkgray;
}
#sonBar
{
  background-color: green;
  width: 175rpx;
